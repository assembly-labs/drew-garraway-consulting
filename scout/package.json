{
  "name": "scout-library-assistant",
  "private": true,
  "version": "2.0.0",
  "homepage": ".",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "wrangler pages dev -- npm run dev",
    "build": "tsc && vite build",
    "preview": "wrangler pages dev dist",
    "lint": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate": "node scripts/validate-deployment.js",
    "predeploy": "npm run validate && npm run build",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:test": "npm run predeploy && echo 'âœ… Ready to push to GitHub!'",
    "test:api": "node scripts/test-api-local.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@tanstack/react-query": "^5.51.23",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.7",
    "terser": "^5.44.0",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vitest": "^2.1.8",
    "wrangler": "^3.99.0"
  }
