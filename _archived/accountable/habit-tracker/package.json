{
  "name": "habit-tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test:local": "npm run typecheck && npm run lint && npm run build",
    "test:preview": "npm run build && npm run preview",
    "test:full": "node scripts/test-local.cjs",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:full": "rm -rf dist node_modules package-lock.json",
    "serve:prod": "npx serve -s dist -p 3000",
    "preflight": "node scripts/preflight-check.cjs",
    "deploy:dry-run": "npm run preflight && npm run build && echo 'âœ… Ready for deployment'",
    "deploy:staging": "npm run deploy:dry-run && npx wrangler pages deploy dist --project-name=accountable-habit-tracker",
    "deploy:production": "npm run preflight && npm run build && npx wrangler pages deploy dist --project-name=accountable-habit-tracker --branch=main"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.9.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
