{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "SIECourseStructure": "readonly",
        "module": "readonly"
    },
    "rules": {
        "no-unused-vars": "error",
        "no-console": "warn",
        "semi": ["error", "always"],
        "quotes": ["warn", "single", { "avoidEscape": true }],
        "eqeqeq": ["error", "always"],
        "no-var": "error",
        "prefer-const": "warn"
    },
    "overrides": [
        {
            "files": ["scripts/**/*.js"],
            "env": {
                "node": true,
                "browser": false
            },
            "globals": {
                "require": "readonly",
                "module": "readonly",
                "process": "readonly",
                "__dirname": "readonly"
            }
        }
    ]
}
