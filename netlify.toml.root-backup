[build]
  # Tell Netlify where the actual app is
  base = "librarian-llm"

  # The build command to run
  command = "npm install && npm run build"

  # Where to find the built files (relative to base)
  publish = "dist"

  # Where to find serverless functions (relative to base)
  functions = "netlify/functions"

[build.environment]
  # Node version for building
  NODE_VERSION = "20"

[[redirects]]
  # Redirect /api/* to serverless functions
  from = "/api/*"
  to = "/.netlify/functions/:splat"
  status = 200

# Headers for security and caching
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-Content-Type-Options = "nosniff"
    X-XSS-Protection = "1; mode=block"