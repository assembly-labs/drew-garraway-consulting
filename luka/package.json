{
  "name": "luka",
  "version": "1.0.0",
  "description": "Luka - Financial services professional website",
  "scripts": {
    "build:css": "npx tailwindcss -i ./css/input.css -o ./css/style.css --minify",
    "watch:css": "npx tailwindcss -i ./css/input.css -o ./css/style.css --watch",
    "serve": "npx serve -l 8080",
    "dev": "npm run build:css && npx concurrently \"npm run watch:css\" \"npm run serve\"",
    "build": "npm run build:css"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "serve": "^14.2.0",
    "tailwindcss": "^3.4.0"
  }
}
