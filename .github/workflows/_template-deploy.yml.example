# TEMPLATE: Copy this file and customize for new projects
# Rename to: deploy-{project-name}.yml
#
# Checklist for new project:
# 1. Copy this file to .github/workflows/deploy-{project-name}.yml
# 2. Replace all {PROJECT_NAME} placeholders
# 3. Replace all {project-folder} placeholders
# 4. Replace {cloudflare-project-name} with your CF Pages project name
# 5. Set correct build command and output directory
# 6. Ensure CLOUDFLARE_API_TOKEN and CLOUDFLARE_ACCOUNT_ID secrets are set
# 7. Create the Cloudflare Pages project (first deploy will auto-create it)

name: Deploy {PROJECT_NAME} to Cloudflare Pages

on:
  push:
    branches:
      - main
    paths:
      - '{project-folder}/**'
      - '.github/workflows/deploy-{project-folder}.yml'
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    name: Deploy {PROJECT_NAME}

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      # Include this block if project has package.json
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
          cache-dependency-path: {project-folder}/package-lock.json

      - name: Install dependencies
        run: npm ci
        working-directory: {project-folder}

      - name: Build
        run: npm run build
        working-directory: {project-folder}
      # End of Node.js block

      - name: Deploy to Cloudflare Pages
        uses: cloudflare/wrangler-action@v3
        with:
          apiToken: ${{ secrets.CLOUDFLARE_API_TOKEN }}
          accountId: ${{ secrets.CLOUDFLARE_ACCOUNT_ID }}
          command: pages deploy {output-dir} --project-name={cloudflare-project-name}
          workingDirectory: {project-folder}

# Common output directories:
# - Vite/React: dist
# - Next.js (static): out
# - Next.js (Cloudflare): .vercel/output/static
# - Static HTML: . (current directory)
# - Custom: check wrangler.toml pages_build_output_dir
