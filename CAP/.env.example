# CAP Platform - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# ==================================
# Supabase Configuration
# ==================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# ==================================
# Stripe Payment Processing
# ==================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==================================
# AI Services
# ==================================
# Replicate (for background removal)
REPLICATE_API_TOKEN=r8_your-token

# Anthropic Claude (for bio generation)
ANTHROPIC_API_KEY=sk-ant-your-key

# ==================================
# Print Fulfillment (GotPrint)
# ==================================
GOTPRINT_API_KEY=your-api-key
GOTPRINT_FTP_HOST=ftp.gotprint.com
GOTPRINT_FTP_USER=your-ftp-username
GOTPRINT_FTP_PASSWORD=your-ftp-password

# ==================================
# Email Service
# ==================================
# Use Resend or SendGrid
RESEND_API_KEY=re_your-key

# ==================================
# Application Configuration
# ==================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ==================================
# Netlify (set in Netlify dashboard, not here)
# ==================================
# NETLIFY_AUTH_TOKEN=your-token
# NETLIFY_SITE_ID=your-site-id
